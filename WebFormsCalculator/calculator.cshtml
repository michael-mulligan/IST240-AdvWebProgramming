<!DOCTYPE html>
<html>	
	<body>
		<h1>Calculator</h1>
		<form action='' method='post'>
			<div>
				<label for='a'>First number:</label>
				<input type='number' name='a'/>
			</div>
			</div>
				<label for='b'>Second number:</label>
				<input type='number' name='b'/>
			</div>
			<fieldset>
				<legend>Operation</legend>
				<input name='operation'
					 type='radio'
					 value='add' />
				<label for='add'>Add(+)</label>
				<input name='operation'
					 type='radio'
					 value='subtract' />
				<label for='subtract'>Subtract (-)</label>
				<input name='operation'
					 type='radio'
					 value='multiply' />
				<label for='multiply'>Multiply (*)</label>
				<input name='operation'
					 type='radio'
					 value='divide' />
				<label for='divide'>Divide (/)</label>
			</fieldset>
			<div>
				<button>Submit</button>
			</div>
		</form>
		@{
			if(IsPost){
				int a = Convert.ToInt32(Request["a"]);
				int b = Convert.ToInt32(Request["b"]);
				string operation = Request["operation"];
				int answer = 0;
				
				switch(operation)
				{
					case "add":
						answer = a + b;
						break;
					case "subtract":
						answer = a - b;
						break;
					case "multiply":
						answer = a * b;
						break;
					case "divide":
						answer = a / b;
						break;
				}
				
				<p>Answer: @answer </p>
			}
		}
	</body>
</html>